<p id="notice"><%= notice %></p>

<h1>Criancas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Pai</th>
      <th>Mae</th>
      <th>Responavel</th>
      <th>Nascimento</th>
      <th>Turma</th>
      <th>Endereco</th>
      <th>Telefone</th>
      <th>Roupa</th>
      <th>Calcado</th>
      <th>Saude</th>
      <th>Medicamento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @criancas.each do |crianca| %>
      <tr>
        <td><%= crianca.Nome %></td>
        <td><%= crianca.Pai %></td>
        <td><%= crianca.Mae %></td>
        <td><%= crianca.Responavel %></td>
        <td><%= crianca.Nascimento %></td>
        <td><%= crianca.Turma %></td>
        <td><%= crianca.Endereco %></td>
        <td><%= crianca.Telefone %></td>
        <td><%= crianca.Roupa %></td>
        <td><%= crianca.Calcado %></td>
        <td><%= crianca.Saude %></td>
        <td><%= crianca.Medicamento %></td>
        <td><%= link_to 'Show', crianca %></td>
        <td><%= link_to 'Edit', edit_crianca_path(crianca) %></td>
        <td><%= link_to 'Destroy', crianca, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

